    <div class="bg-white fixed w-full flex py-4 justify-between md:justify-around items-center z-20">
        <div class="px-10">
            <a href="/home">
                <img class="w-[40px]" src="/img/logo.jpeg" alt="TelsTweet">
            </a>
        </div>
        <div class="text-xl  flex md:gap-6 gap-4 md:absolute fixed bottom-0 md:bottom-auto bg-white md:w-auto w-full justify-evenly md:justify-normal">
            <a href="/home" class="text-[#B7B8B8] py-5 px-2">
                <i class="fa-solid fa-house"></i>
            </a>
            <a href="/search" class="text-[#B7B8B8] py-5 px-2">
                <i class="fa-solid fa-magnifying-glass"></i>
            </a>
            <a href="/tweet" class="py-5 px-2">
                <i class="fa-solid fa-plus"></i>
            </a>
            <a href="/@<%= user_id %>" class="text-[#B7B8B8] py-5 px-2">
                <i class="fa-solid fa-user"></i>
            </a>
        </div>
        <div class="text-xl">
            <a href="/logout" class="text-[#B7B8B8] py-6 px-10">
                <i class="fa-solid fa-right-from-bracket"></i>
            </a>
        </div>
    </div>

    <form class="bg-[#F0F2FF] flex justify-center items-center h-[100vh] flex-col gap-4" action="/post" method="POST" enctype="multipart/form-data">
        <div class="bg-white border-2 border-[#B7B8B8] w-[350px] rounded-md p-4 gap-3 flex flex-col">
            <input type="file" name="image" id="image" accept="image/*" hidden>
            <div class="flex flex-col relative">
                <label>Description :</label>
                <textarea class="pl-10 pr-4 py-2 rounded-md border-2 border-[#B7B8B8]" type="description" name="description" placeholder="Description"></textarea> 
                <i class="fa-solid fa-message absolute top-[38px] left-4"></i>
            </div>
            <div class="flex flex-col relative">
                <button class="w-full border-[#B7B8B8] border-2 rounded-md text-lg" onclick="document.getElementById('image').click()" type="button" id="preview">
                    <img class="w-full hidden rounded-md" src="" alt="preview" id="imagePreview">
                    <div id="textPreview">
                        <div class="py-10 flex items-center justify-center flex-col">
                            <i class="fa-solid fa-image"></i>
                            <p class="text-[#B7B8B8]">Upload Image</p>
                        </div>
                    </div>
                </button>
            </div>
            <button class="bg-black text-white w-full p-2 rounded-md mt-2" type="submit">Post</button>
        </div>
    </form>

